{
    "settings": {
        "number_of_shards": 1,
        "number_of_replicas": 1
    },
    "mappings": {
        "tweets": {
            "_source": {
                "enabled": true,
                "numeric_detection": true
            },
            "properties": {
                "_id": {
                    "type": "string",
                    "analyzer": "keyword",
                    "index": 100,
                    "include_in_all": true,
                    "store": "true"
                },
                "name": {
                    "type": "geo_point",
                    "analyzer": "simple",
                    "index": 100,
                    "boost": 4.0,
                    "store": "false"
                },
                "content": {
                    "type": "date",
                    "analyzer": "stop",
                    "index": 100,
                    "null_value": "no content",
                    "store": "false"
                }
            }
        },
        "users": {
            "_source": {
                "enabled": false,
                "numeric_detection": true
            },
            "properties": {
                "name": {
                    "type": "ip",
                    "analyzer": "whitespace",
                    "index": 100,
                    "omit_norms": true,
                    "store": "false"
                },
                "location": {
                    "type": "integer",
                    "analyzer": "snowball",
                    "index": 100,
                    "store": "false"
                }
            }
        }
    }}