{
    "settings": {
        "index": {
            "number_of_shards": 2,
            "number_of_replicas": 1
        }
    },
    "mappings": {
        "tweets": {
            "_source": {
                "enabled": true
            },
            "numeric_detection": true,
            "_boost": {
                "name": "myboost",
                "null_value": 1.2
            },
            "_size": {
                "enabled": true
            },
            "properties": {
                "_id": {
                    "type": "string",
                    "analyzer": "keyword",
                    "include_in_all": true,
                    "store": "yes"
                },
                "name": {
                    "type": "geo_point",
                    "analyzer": "simple",
                    "index": "not_analyzed",
                    "boost": 4.0
                },
                "content": {
                    "type": "date",
                    "analyzer": "stop",
                    "null_value": "no content"
                }
            },
            "_meta": {
                "class": "com.sksamuel.User"
            }
        },
        "users": {
            "_source": {
                "enabled": true
            },
            "dynamic_date_formats": ["mm/yyyy", "dd-MM-yyyy"],
            "date_detection": true,
            "numeric_detection": true,
            "_analyzer": {
                "path": "somefield"
            },
            "properties": {
                "name": {
                    "type": "ip",
                    "analyzer": "whitespace",
                    "omit_norms": true
                },
                "location": {
                    "type": "integer",
                    "analyzer": "snowball"
                },
                "email": {
                    "type": "binary",
                    "analyzer": "standard"
                },
                "picture": {
                    "type": "attachment",
                    "analyzer": "notindexed"
                },
                "age": {
                    "type": "float"
                },
                "area": {
                    "type": "geo_shape"
                }
            }
        }
    }
}