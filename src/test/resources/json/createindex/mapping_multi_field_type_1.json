{
    "settings": {
        "index": {
            "number_of_shards": 2
        }
    },
    "mappings": {
        "tweet": {
            "_all": {
                "enabled": true
            },
            "_source": {
                "enabled": true
            },
            "numeric_detection": true,
            "dynamic": "dynamic",
            "_boost": {
                "name": "myboost",
                "null_value": 1.2
            },
            "_size": {
                "enabled": true
            },
            "_ttl": {
                "enabled": false
            },
            "properties": {
                "name": {
                    "type": "multi_field",
                    "fields": {
                        "name": {
                            "type": "string",
                            "index": "analyzed"
                        },
            "untouched": {
              "type": "string",
              "index": "not_analyzed"
            }
          }
        }
      }
    }
  }
}
